<Magnes>:
    magnet_image: image_magnes
    #canvas:
        #Rectangle:
            #pos: self.pos
            #size: self.width, self.height
    Image:
        id: image_magnes
        source: "images/magnet.png"
        size: root.width, root.height
        pos: root.pos

<Electron>:
    electron_image: image
    size: 50, 50
    Image:
        id: image
        source: "images/electron.png"
        size: root.size
        pos: root.pos
    #canvas:
       # Ellipse:
            #pos: self.pos
            #size: self.size
<RaceGame>:
    magnes1: przeszkoda1
    magnes2: przeszkoda2
    magnes3: przeszkoda3

    ball: race_electron
    canvas:
        Rectangle:
            pos: self.center_x, 0
            size: 1, self.height

    Label:
        font_size: 50
        center_x: root.width/2
        top: root.top - 50
        text: "Dystans: " + str(root.ball.score)

    Label:
        font_size: 20
        center_x: root.width * 4/5
        top: root.top
        text: "Rekord: " + str(root.ball.record)

    Electron:
        id: race_electron

    Magnes:
        id: przeszkoda1
        x: -100

    Magnes:
        id: przeszkoda2
        x: -100

    Magnes:
        id: przeszkoda3
        x: -100